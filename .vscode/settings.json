{
  "code-runner.executorMap": {
    "javascript": "clear && NODE_PATH=./dist node",
    "php": "clear && php",
    "python": "clear && venv/bin/python -u",
    "typescript": "clear && npx ts-node -r 'dotenv/config' -r 'tsconfig-paths/register' --transpile-only",
  },
  "code-runner.runInTerminal": true,
  "python.pythonPath": "venv/bin/python",
  "cSpell.ignoreWords": [
    "global",
    "middlewares",
    "setup",
    "usecase"
  ],
  "window.zoomLevel": 0,
  "editor.fontSize": 18,
  "terminal.integrated.fontSize": 18,
  "editor.glyphMargin": false,
  "python.formatting.autopep8Args": ["--indent-size=2"],
  "python.linting.flake8Args": ["--ignore=E111"]
}
